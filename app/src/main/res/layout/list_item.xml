<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/small_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/small_padding">

        <TextView
            style="@style/ListItemCategory"
            android:text="Product: " />

        <TextView
            android:id="@+id/name"
            style="@style/ListItemValues"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/list_item_product_name"
            android:textStyle="bold"
            tools:text="Bed" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/supplier_container"
                    android:layout_width="@dimen/supplier_container_width"
                    android:layout_height="wrap_content"
                    android:background="@color/background_2"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding">

                    <TextView
                        style="@style/ListItemCategory"
                        android:padding="@dimen/small_padding"
                        android:text="Supplier"
                        android:textAllCaps="true" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/small_padding">


                        <TextView
                            style="@style/ListItemCategory"
                            android:text="Name: " />

                        <TextView
                            android:id="@+id/supplier"
                            style="@style/ListItemValues"
                            tools:text="Drewex" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/small_padding">

                        <TextView
                            style="@style/ListItemCategory"
                            android:text="Phone: " />

                        <TextView
                            android:id="@+id/supplier_phone"
                            style="@style/ListItemValues"
                            tools:text="600293846" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/price_quantity_container"
                    android:layout_width="@dimen/price_quantity_container_width"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/very_small_padding">

                        <TextView
                            style="@style/ListItemCategory"
                            android:text="Price: zÅ‚ " />

                        <TextView
                            android:id="@+id/price"
                            style="@style/ListItemValues"
                            tools:text="300" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/very_small_padding">

                        <TextView
                            style="@style/ListItemCategory"
                            android:text="Quantity: " />

                        <TextView
                            android:id="@+id/quantity"
                            style="@style/ListItemValues"
                            tools:text="5" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/sale_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="@string/sale"
            android:focusable="false"
            android:text="@string/sale" />
    </LinearLayout>
</LinearLayout>